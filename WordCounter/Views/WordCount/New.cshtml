@{
    Layout = "_Layout";
    ViewData["Title"] = "New Word Count";
}

<h1>Word Count Input</h1>

<form action="/wordcounter" method="post">

    <label for="userInputWord">Hello, please input a word to find in a sentance:</label>
    <input id="userInputWord" type="text" name="userInputWord">
    <p></p>

    <label for="userInputSentance">Please input a sentance to count how many times this word appears: </label>
    <input id="userInputSentance" type="text" name="userInputSentance">
    <p></p>

    <button type="submit">Click here to find the word count!</button>
</form>
</body>
</html>